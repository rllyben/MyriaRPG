<UserControl x:Class="MyriaRPG.View.UserControls.GameWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:MyriaRPG.View.UserControls"
             xmlns:beh="clr-namespace:MyriaRPG.Model.Behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <!-- Bind state to VM -->
    <Grid Canvas.Left="{Binding Left}" Canvas.Top="{Binding Top}"
        Panel.ZIndex="{Binding ZIndex}" Name="Grid">

        <Border Background="{DynamicResource Brush.Background}" CornerRadius="8" BorderBrush="#607D8B" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="28"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Title bar -->
                <Border Grid.Row="0" Background="{DynamicResource Brush.TitleBackground}" CornerRadius="8,8,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="30"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="{Binding Title}" Margin="8,0" VerticalAlignment="Center" Foreground="{DynamicResource Brush.Foreground}" HorizontalAlignment="Center" Panel.ZIndex="99"/>
                        <Button Content="✕"
                                Command="{Binding CloseCommand}" DockPanel.Dock="Right"
                                Grid.Column="1"
                                Panel.ZIndex="99" Margin="2,2,2,2" Padding="0,0,0,0" Foreground="{DynamicResource Brush.Error}" BorderBrush="{DynamicResource Brush.Border}" Background="{DynamicResource Brush.Background}" FontWeight="Bold"/>
                        <!-- Drag thumb with behavior firing VM command -->
                        <Thumb Style="{x:Null}" x:Name="DragThumb" Background="{DynamicResource Brush.TitleBackground}" Grid.ColumnSpan="2">
                            <i:Interaction.Behaviors>
                                <beh:DragThumbToCommandBehavior Command="{Binding DragDeltaCommand}" />
                            </i:Interaction.Behaviors>
                        </Thumb>
                    </Grid>
                </Border>

                <!-- Content -->
                <Frame Name="Frame" NavigationUIVisibility="Hidden" Grid.Row="1"></Frame>
            </Grid>
        </Border>

        <!-- Bring-to-front via event → command (no code-behind) -->
        <i:Interaction.Triggers>
            <i:EventTrigger EventName="PreviewMouseDown">
                <i:InvokeCommandAction Command="{Binding FocusCommand}" />
            </i:EventTrigger>
        </i:Interaction.Triggers>
    </Grid>
</UserControl>
