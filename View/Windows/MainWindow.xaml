<Window x:Class="MyriaRPG.View.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:MyriaRPG"
        xmlns:view="clr-namespace:MyriaRPG.View.UserControls"
        mc:Ignorable="d"
        Title="Myria" Height="450" Width="800" Background="{x:Null}" Name="Root">
    <Grid>
        <Canvas Name="Canvas" Background="{DynamicResource Brush.Background}" Panel.ZIndex="999" Width="{Binding ActualWidth, ElementName=Root}" Height="{Binding ActualHeight, ElementName=Root}">
            <Frame Name="Frame" NavigationUIVisibility="Hidden" Width="{Binding ActualWidth, ElementName=Root}" Height="{Binding ActualHeight, ElementName=Root}"/>
        </Canvas>
    </Grid>
</Window>
