<Window x:Class="MyriaRPG.View.Windows.SkillDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyriaRPG.View.Windows"
        Title="Skill Details"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        Background="#141723"
        ResizeMode="NoResize">
    <Border Padding="12" Background="#141723">
        <StackPanel>
            <TextBlock Text="{Binding Name}"
                       FontSize="18" FontWeight="SemiBold"
                       Foreground="#EFEFEF" Margin="0,0,0,4"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                <TextBlock Text="{Binding ClassName}" Foreground="#B4B4C5" Margin="0,0,8,0"/>
                <TextBlock Text="{Binding TypeText}" Foreground="#CFCFFF" Margin="0,0,8,0"/>
                <TextBlock Text="{Binding TargetText}" Foreground="#CFCFFF"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                <TextBlock Text="Mana: " Foreground="#AAA"/>
                <TextBlock Text="{Binding ManaCost}" Foreground="#DDF"/>
                <TextBlock Text="   •   " Foreground="#777"/>
                <TextBlock Text="{Binding TimingText}" Foreground="#AFAFD0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <TextBlock Text="Scaling: " Foreground="#AAA"/>
                <TextBlock Text="{Binding ScalingText}" Foreground="#F6F6FF"/>
            </StackPanel>

            <TextBlock Text="Description" FontWeight="SemiBold" Foreground="#C7C7D6" Margin="0,0,0,4"/>
            <ScrollViewer MaxHeight="200">
                <TextBlock Text="{Binding Description}"
                           TextWrapping="Wrap"
                           Foreground="#E0E0F0"/>
            </ScrollViewer>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Close" Width="80" IsCancel="True"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
