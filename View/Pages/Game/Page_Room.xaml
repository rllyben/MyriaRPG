<Page x:Class="MyriaRPG.View.Pages.Game.Page_Room"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyriaRPG.View.Pages.Game"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page_Room">
    
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <!-- Small square icon button style -->
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Foreground" Value="{DynamicResource Brush.Foreground}"/>
            <Setter Property="Background" Value="{DynamicResource Brush.Background}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Brush.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="ToolTipService.ShowDuration" Value="60000"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <!-- Root layout: a single Grid that hosts overlays (header, action bar, exits) and the center 'Map' area -->
    <Grid>
        <!-- CENTER: Map / main content (text-only placeholder for now) -->
        <Border Margin="72" Padding="16" CornerRadius="12" Background="{DynamicResource Brush.Background}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="{Binding RoomName}" FontSize="22" FontWeight="Bold" Foreground="{DynamicResource Brush.Foreground}"/>
                    <TextBlock Text="{Binding RoomDescription}" Margin="0,8,0,0" TextWrapping="Wrap" Foreground="{DynamicResource Brush.Foreground}"/>
                    <TextBlock Margin="0,16,0,0" FontStyle="Italic" Opacity="0.7" Text="[Map area placeholder — will render text map for now]" Foreground="{DynamicResource Brush.Foreground}"/>
                </StackPanel>
            </ScrollViewer>
        </Border>


        <!-- TOP-LEFT: compact character name only -->
        <StackPanel>
            <TextBlock Text="{Binding Char.NameAndLevel}" FontWeight="SemiBold" Foreground="{DynamicResource Brush.Foreground}" FontSize="12" TextAlignment="Left"/>
            <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                <TextBlock Text="XP" Opacity="0.7" Margin="0,0,6,0" Foreground="{DynamicResource Brush.Foreground}"/>
                <ProgressBar Minimum="0" Maximum="100" Value="{Binding Char.XpPercent}" Height="8" Width="120"/>
                <TextBlock Text="{Binding Char.XpPercent, StringFormat={}{0}%}" Margin="6,0,0,0" Opacity="0.8" Foreground="{DynamicResource Brush.Foreground}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                <TextBlock Text="HP" Opacity="0.7" Margin="0,0,6,0" Foreground="{DynamicResource Brush.Foreground}"/>
                <ProgressBar Minimum="0" Maximum="{Binding Char.MaxHp}" Value="{Binding Char.Hp}" Height="8" Width="100" Foreground="#FFCC0000"/>
                <TextBlock Text="{Binding Char.HpDisplay}" Margin="6,0,0,0" Opacity="0.8" Foreground="{DynamicResource Brush.Foreground}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                <TextBlock Text="MP" Opacity="0.7" Margin="0,0,6,0" Foreground="{DynamicResource Brush.Foreground}"/>
                <ProgressBar Minimum="0" Maximum="{Binding Char.MaxMana}" Value="{Binding Char.Mana}" Height="8" Width="100" Foreground="#FF5636CE" />
                <TextBlock Text="{Binding Char.ManaDisplay}" Margin="6,0,0,0" Opacity="0.8" Foreground="{DynamicResource Brush.Foreground}"/>
            </StackPanel>
        </StackPanel>


        <!-- TOP-RIGHT: small icon-only actions with tooltips -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="12">
            <!-- Inventory -->
            <Button Style="{StaticResource IconButton}" Command="{Binding OpenInventoryCommand}">
                <TextBlock Text="🎒" FontSize="18"/>
                <Button.ToolTip>
                    <ToolTip Content="Inventory"/>
                </Button.ToolTip>
            </Button>
            <!-- Character -->
            <Button Style="{StaticResource IconButton}" Command="{Binding OpenCharacterCommand}">
                <TextBlock Text="🧍" FontSize="18"/>
                <Button.ToolTip>
                    <ToolTip Content="Character"/>
                </Button.ToolTip>
            </Button>
            <!-- Skills -->
            <Button Style="{StaticResource IconButton}" Command="{Binding OpenSkillsCommand}">
                <TextBlock Text="✨" FontSize="18"/>
                <Button.ToolTip>
                    <ToolTip Content="Skills"/>
                </Button.ToolTip>
            </Button>
            <!-- Quests -->
            <Button Style="{StaticResource IconButton}" Command="{Binding OpenQuestsCommand}">
                <TextBlock Text="📜" FontSize="18"/>
                <Button.ToolTip>
                    <ToolTip Content="Quests"/>
                </Button.ToolTip>
            </Button>
            <!-- Map (central concept; still opens text/map panel as needed) -->
            <Button Style="{StaticResource IconButton}" Command="{Binding MapCommand}">
                <TextBlock Text="🗺️" FontSize="18"/>
                <Button.ToolTip>
                    <ToolTip Content="Map"/>
                </Button.ToolTip>
            </Button>
        </StackPanel>


        <!-- EDGE EXITS: appear only if the exit exists -->
        <!-- NORTH (top center) -->
        <Button Content="North" Command="{Binding MoveCommand}" 
                CommandParameter="North"
                Visibility="{Binding HasNorth, Converter={StaticResource BoolToVis}}"
                HorizontalAlignment="Center" 
                VerticalAlignment="Top" 
                Margin="0,8,0,0" Padding="8,4" Foreground="{DynamicResource Brush.Foreground}" Background="{DynamicResource Brush.Background}"/>


        <!-- SOUTH (bottom center) -->
        <Button Content="South" 
                Command="{Binding MoveCommand}" 
                CommandParameter="South"
                Visibility="{Binding HasNorth, Converter={StaticResource BoolToVis}}"
                HorizontalAlignment="Center" 
                VerticalAlignment="Bottom" 
                Margin="0,0,0,8" Padding="8,4" Foreground="{DynamicResource Brush.Foreground}" Background="{DynamicResource Brush.Background}"/>


        <!-- WEST (left center, vertical) -->
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Margin="8" >
            <Button Content="West" Command="{Binding MoveCommand}" CommandParameter="West"
                    Visibility="{Binding HasWest, Converter={StaticResource BoolToVis}}" Padding="8,4" Foreground="{DynamicResource Brush.Foreground}" Background="{DynamicResource Brush.Background}"/>
        </StackPanel>


        <!-- EAST (right center, vertical) -->
        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center" Margin="8">
            <Button Content="East" Command="{Binding MoveCommand}" CommandParameter="East"
                    Visibility="{Binding HasEast, Converter={StaticResource BoolToVis}}" Padding="8,4"/>
        </StackPanel>
    </Grid>
</Page>
