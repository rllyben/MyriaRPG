<Page x:Class="MyriaRPG.View.Pages.Game.Page_Fight"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyriaRPG.View.Pages.Game"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page_Fight">
    <Grid>
        <Border Background="#1B1E2A" CornerRadius="8" Padding="12">
            <StackPanel>
                <TextBlock Text="Combat" FontSize="18" FontWeight="SemiBold" Foreground="#EFEFEF"/>
                <TextBlock Text="{Binding ActiveMonsterName}" Foreground="#D0D0E8" Margin="0,6,0,0"/>

                <StackPanel Orientation="Horizontal" Margin="0,12,0,0" HorizontalAlignment="Right">
                    <Button Content="Attack" IsEnabled="False" Padding="10,2" Margin="0,0,6,0"/>
                    <Button Content="Run" Command="{Binding CloseCombatCommand}" Padding="10,2"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
