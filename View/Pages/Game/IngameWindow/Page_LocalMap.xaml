<Page x:Class="MyriaRPG.View.Pages.Game.IngameWindow.Page_LocalMap"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyriaRPG.View.Pages.Game.IngameWindow"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      xmlns:controls="clr-namespace:MyriaRPG.View.UserControls">
    <Grid Background="#111" Margin="8">
        <controls:LocalMapControl Snapshot="{Binding Map}" CurrentPoiId="{Binding CurrentPoiId}"/>
    </Grid>
</Page>
