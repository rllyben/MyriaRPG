<Page x:Class="MyriaRPG.View.Pages.Game.IngameWindow.Page_Character"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyriaRPG.View.Pages.Game.IngameWindow"
      Title="Character">
    <Grid Margin="12" Background="#101013">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- header -->
            <RowDefinition Height="Auto"/>
            <!-- xp bar -->
            <RowDefinition Height="12"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="18"/>
            <RowDefinition/>
            <!-- stats -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <!-- base stats -->
            <ColumnDefinition Width="18"/>
            <ColumnDefinition Width="*"/>
            <!-- derived -->
        </Grid.ColumnDefinitions>

        <!-- Header: name + level -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.ColumnSpan="3" VerticalAlignment="Center" Margin="0,0,0,6">
            <TextBlock Text="{Binding CharacterName}" FontSize="20" FontWeight="SemiBold" Foreground="#EFEFEF" />
            <TextBlock Text="  •  " Foreground="#7E7E8A" FontSize="16" Margin="4,0"/>
            <TextBlock Text="{Binding TblLevel}" Foreground="#AFAFBA" FontSize="16"/>
            <TextBlock Text="{Binding Level}" Foreground="#EFEFEF" FontSize="16" FontWeight="SemiBold"/>
        </StackPanel>

        <!-- XP progress -->
        <Grid Grid.Row="1" Grid.ColumnSpan="3">
            <ProgressBar Height="14"
                   Minimum="0"
                   Maximum="{Binding XpToNextLevel}"
                   Value="{Binding XpCurrent}"
                   Foreground="#55C1FF"
                   Background="#1D2530"/>
            <TextBlock Text="{Binding XpProgressText}" 
                 HorizontalAlignment="Center" VerticalAlignment="Center"
                 FontSize="12" Foreground="#D8D8E4"/>
        </Grid>

        <!-- Base stats (left) -->
        <Border Grid.Row="3" Grid.Column="0" Padding="12" Background="#141723" CornerRadius="8">
            <StackPanel>
                <TextBlock Text="{Binding TblBase}" Foreground="#C7C7D6" FontWeight="SemiBold" Margin="0,0,0,8"/>

                <!-- 4 columns: Label | [-] | Value | [+] -->
                <UniformGrid Columns="4" HorizontalAlignment="Stretch">

                    <!-- STR -->
                    <TextBlock Text="{Binding TblSTR}" Foreground="#889" VerticalAlignment="Center"/>
                    <Button Content="−"
              Command="{Binding DecreaseStatCommand}"
              CommandParameter="STR"
              Width="22" Height="22" Margin="2,0"
              Padding="0" />
                    <TextBlock Text="{Binding Base.STR}" Foreground="#EEF" TextAlignment="Center" VerticalAlignment="Center"/>
                    <Button Content="+"
              Command="{Binding IncreaseStatCommand}"
              CommandParameter="STR"
              Width="22" Height="22" Margin="2,0"
              Padding="0" />

                    <!-- DEX -->
                    <TextBlock Text="{Binding TblDEX}" Foreground="#889" VerticalAlignment="Center"/>
                    <Button Content="−"
              Command="{Binding DecreaseStatCommand}"
              CommandParameter="DEX"
              Width="22" Height="22" Margin="2,0"
              Padding="0" />
                    <TextBlock Text="{Binding Base.DEX}" Foreground="#EEF" TextAlignment="Center" VerticalAlignment="Center"/>
                    <Button Content="+"
              Command="{Binding IncreaseStatCommand}"
              CommandParameter="DEX"
              Width="22" Height="22" Margin="2,0"
              Padding="0" />

                    <!-- END -->
                    <TextBlock Text="{Binding TblEND}" Foreground="#889" VerticalAlignment="Center"/>
                    <Button Content="−"
              Command="{Binding DecreaseStatCommand}"
              CommandParameter="END"
              Width="22" Height="22" Margin="2,0"
              Padding="0" />
                    <TextBlock Text="{Binding Base.END}" Foreground="#EEF" TextAlignment="Center" VerticalAlignment="Center"/>
                    <Button Content="+"
              Command="{Binding IncreaseStatCommand}"
              CommandParameter="END"
              Width="22" Height="22" Margin="2,0"
              Padding="0" />

                    <!-- INT -->
                    <TextBlock Text="{Binding TblINT}" Foreground="#889" VerticalAlignment="Center"/>
                    <Button Content="−"
              Command="{Binding DecreaseStatCommand}"
              CommandParameter="INT"
              Width="22" Height="22" Margin="2,0"
              Padding="0" />
                    <TextBlock Text="{Binding Base.INT}" Foreground="#EEF" TextAlignment="Center" VerticalAlignment="Center"/>
                    <Button Content="+"
              Command="{Binding IncreaseStatCommand}"
              CommandParameter="INT"
              Width="22" Height="22" Margin="2,0"
              Padding="0" />

                    <!-- SPR -->
                    <TextBlock Text="{Binding TblSPR}" Foreground="#889" VerticalAlignment="Center"/>
                    <Button Content="−"
              Command="{Binding DecreaseStatCommand}"
              CommandParameter="SPR"
              Width="22" Height="22" Margin="2,0"
              Padding="0" />
                    <TextBlock Text="{Binding Base.SPR}" Foreground="#EEF" TextAlignment="Center" VerticalAlignment="Center"/>
                    <Button Content="+"
              Command="{Binding IncreaseStatCommand}"
              CommandParameter="SPR"
              Width="22" Height="22" Margin="2,0"
              Padding="0" />

                    <!-- Unspent (no buttons) -->
                    <TextBlock Text="{Binding TblUnspent}" Foreground="#889" VerticalAlignment="Center"/>
                    <TextBlock Text="" />
                    <!-- spacer -->
                    <TextBlock Text="{Binding Base.Unspent}" Foreground="#EEF" TextAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="" />
                    <!-- spacer -->
                </UniformGrid>
            </StackPanel>
        </Border>

        <!-- Derived stats (right) -->
        <Border Grid.Row="5" Padding="12" Background="#141723" CornerRadius="8">
            <StackPanel>
                <TextBlock Text="{Binding TblDerived}" Foreground="#C7C7D6" FontWeight="SemiBold" Margin="0,0,0,8"/>

                <!-- HP/MP row -->
                <DockPanel LastChildFill="False" Margin="0,0,0,6">
                    <StackPanel Orientation="Horizontal" Margin="0,0,12,0">
                        <TextBlock Text="{Binding TblHP}" Foreground="#889"/>
                        <TextBlock Text="{Binding Derived.HP}" Foreground="#EEF" FontWeight="SemiBold"/>
                        <TextBlock Text="/" Foreground="#667" Margin="4,0"/>
                        <TextBlock Text="{Binding Derived.MaxHP}" Foreground="#EEF"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding TblMP}" Foreground="#889"/>
                        <TextBlock Text="{Binding Derived.MP}" Foreground="#EEF" FontWeight="SemiBold"/>
                        <TextBlock Text="/" Foreground="#667" Margin="4,0"/>
                        <TextBlock Text="{Binding Derived.MaxMP}" Foreground="#EEF"/>
                    </StackPanel>
                </DockPanel>

                <UniformGrid Columns="4" Rows="4" HorizontalAlignment="Stretch">
                    <TextBlock Text="{Binding TblATK}" Foreground="#889"/>
                    <TextBlock Text="{Binding Derived.ATK}" Foreground="#EEF" TextAlignment="Right"/>
                    <TextBlock Text="{Binding TblDEF}" Foreground="#889"/>
                    <TextBlock Text="{Binding Derived.DEF}" Foreground="#EEF" TextAlignment="Right"/>

                    <TextBlock Text="{Binding TblMATK}" Foreground="#889"/>
                    <TextBlock Text="{Binding Derived.MATK}" Foreground="#EEF" TextAlignment="Right"/>
                    <TextBlock Text="{Binding TblMDEF}" Foreground="#889"/>
                    <TextBlock Text="{Binding Derived.MDEF}" Foreground="#EEF" TextAlignment="Right"/>

                    <TextBlock Text="{Binding TblAim}" Foreground="#889"/>
                    <TextBlock Text="{Binding Derived.Aim}" Foreground="#EEF" TextAlignment="Right"/>
                    <TextBlock Text="{Binding TblEvasion}" Foreground="#889"/>
                    <TextBlock Text="{Binding Derived.Evasion}" Foreground="#EEF" TextAlignment="Right"/>

                    <TextBlock Text="{Binding TblCrit}" Foreground="#889"/>
                    <TextBlock Text="{Binding Derived.CritPercent}" Foreground="#EEF" TextAlignment="Right"/>
                    <TextBlock Text="{Binding TblBlock}" Foreground="#889"/>
                    <TextBlock Text="{Binding Derived.BlockPercent}" Foreground="#EEF" TextAlignment="Right"/>
                </UniformGrid>
            </StackPanel>
        </Border>
    </Grid>
</Page>
