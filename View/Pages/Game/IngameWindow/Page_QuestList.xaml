<Page x:Class="MyriaRPG.View.Pages.Game.IngameWindow.Page_QuestList"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyriaRPG.View.Pages.Game.IngameWindow"
      Title="Quests">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        <Style x:Key="SegmentToggleBase"
       TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource Brush.Foreground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Brush.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Bd"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Bd"
                                Property="Background"
                                Value="{DynamicResource Brush.Accent}"/>
                                <Setter Property="Foreground"
                                Value="{DynamicResource Brush.Background}"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Trigger>

                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd"
                                Property="Background"
                                Value="{DynamicResource Brush.TileBackground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="SegmentLeft"
       TargetType="ToggleButton"
       BasedOn="{StaticResource SegmentToggleBase}">
            <Setter Property="BorderThickness" Value="1,1,0,1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Bd"
                        CornerRadius="12,0,0,12"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Bd"
                                Property="Background"
                                Value="{DynamicResource Brush.Accent}"/>
                                <Setter Property="Foreground"
                                Value="{DynamicResource Brush.Background}"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SegmentRight"
       TargetType="ToggleButton"
       BasedOn="{StaticResource SegmentToggleBase}">
            <Setter Property="BorderThickness" Value="0,1,1,1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Bd"
                        CornerRadius="0,12,12,0"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Bd"
                                Property="Background"
                                Value="{DynamicResource Brush.Accent}"/>
                                <Setter Property="Foreground"
                                Value="{DynamicResource Brush.Background}"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Page.Resources>

    <Grid Margin="12" Background="{DynamicResource Brush.Background}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- header -->
            <RowDefinition Height="8"/>
            <RowDefinition Height="*"/>
            <!-- content -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <!-- quest list -->
            <ColumnDefinition Width="12"/>
            <ColumnDefinition Width="*" MinWidth="200"/>
            <!-- details -->
        </Grid.ColumnDefinitions>

        <!-- Header: mode switch -->
        <DockPanel Grid.Row="0" Grid.ColumnSpan="3">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                <TextBlock Text="{Binding TblTitle}"
                           FontSize="20" FontWeight="SemiBold"
                           Foreground="{DynamicResource Brush.Foreground}" Margin="0,0,12,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" >
                <!-- Active -->
                <ToggleButton Content="{Binding BtnActive}"
                              IsChecked="{Binding ShowActive, Mode=TwoWay}"
                              Padding="8,2"
                              Style="{StaticResource SegmentLeft}"/>

                <!-- Available -->
                <ToggleButton Content="{Binding BtnAvailable}"
                              IsChecked="{Binding ShowAvailable, Mode=TwoWay}"
                              Padding="8,2"
                              Style="{StaticResource SegmentRight}"/>
            </StackPanel>
            <TextBlock Text="{Binding HeaderSuffix}"
                           FontSize="14" Foreground="{DynamicResource Brush.Border}" VerticalAlignment="Bottom"/>
        </DockPanel>

        <!-- Quest list -->
        <Border Grid.Row="2" Grid.Column="0" Background="{DynamicResource Brush.Background}" CornerRadius="8" Padding="8">
            <ListBox ItemsSource="{Binding Quests}"
                     SelectedItem="{Binding SelectedQuest}"
                     BorderThickness="0"
                     Background="{DynamicResource Brush.Background}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="6" Margin="0,2"
                                Background="{DynamicResource Brush.TileBackground}">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Title}"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource Brush.Foreground}"/>
                                    <TextBlock Text="  •  " Foreground="{DynamicResource Brush.Border}"/>
                                    <TextBlock Text="Lv. " Foreground="{DynamicResource Brush.Border}"/>
                                    <TextBlock Text="{Binding Level}" Foreground="{DynamicResource Brush.Foreground}"/>
                                </StackPanel>
                                <TextBlock Text="{Binding ShortDescription}"
                                           Foreground="{DynamicResource Brush.Surface}"
                                           TextTrimming="CharacterEllipsis"
                                           FontSize="12"/>
                                <TextBlock Text="{Binding ProgressText}"
                                           Foreground="{DynamicResource Brush.Success}"
                                           FontSize="11" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <!-- Quest details -->
        <Border Grid.Row="2" Grid.Column="2" Background="{DynamicResource Brush.Background}" CornerRadius="8" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- title -->
                    <RowDefinition Height="Auto"/>
                    <!-- meta -->
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="*"/>
                    <!-- description + objectives -->
                    <RowDefinition Height="Auto"/>
                    <!-- rewards -->
                    <RowDefinition Height="Auto"/>
                    <!-- buttons -->
                </Grid.RowDefinitions>

                <!-- Title -->
                <StackPanel Grid.Row="0"
                            Visibility="{Binding HasSelected,  ConverterParameter=Inverse}">
                    <TextBlock Text="{Binding SelectedQuest.Title}"
                               FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource Brush.Foreground}"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding TblLevel}" Foreground="{DynamicResource Brush.Foreground}"/>
                        <TextBlock Text="{Binding SelectedQuest.Level}" Foreground="{DynamicResource Brush.Foreground}"/>
                        <TextBlock Text="  •  " Foreground="{DynamicResource Brush.Border}"/>
                        <TextBlock Text="{Binding SelectedQuest.AreaName}" Foreground="{DynamicResource Brush.Border}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Description -->
                <ScrollViewer Grid.Row="3"
                              Visibility="{Binding HasSelected,  ConverterParameter=Inverse}">
                    <StackPanel>
                        <TextBlock Text="{Binding TblDescription}" FontWeight="SemiBold" Foreground="{DynamicResource Brush.Foreground}" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding SelectedQuest.Description}"
                                   TextWrapping="Wrap" Foreground="{DynamicResource Brush.Foreground}"
                                   Margin="0,0,0,8"/>

                        <TextBlock Text="{Binding TblObjectives}" FontWeight="SemiBold" Foreground="{DynamicResource Brush.Foreground}" Margin="0,4,0,2"/>
                        <ItemsControl ItemsSource="{Binding SelectedQuest.Objectives}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="• " Foreground="{DynamicResource Brush.Border}"/>
                                        <TextBlock Text="{Binding}" Foreground="{DynamicResource Brush.Foreground}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>

                <!-- Rewards -->
                <StackPanel Grid.Row="4"
                            Visibility="{Binding HasSelected,  ConverterParameter=Inverse}"
                            Margin="0,6,0,4">
                    <TextBlock Text="{Binding TblRewards}" FontWeight="SemiBold" Foreground="{DynamicResource Brush.Foreground}" Margin="0,0,0,2"/>
                    <ItemsControl ItemsSource="{Binding SelectedQuest.Rewards}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="• " Foreground="{DynamicResource Brush.Border}"/>
                                    <TextBlock Text="{Binding}" Foreground="{DynamicResource Brush.Foreground}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <!-- Action buttons -->
                <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right"
                            Visibility="{Binding HasSelected,  ConverterParameter=Inverse}">
                    <!-- Active-mode buttons -->
                    <StackPanel Orientation="Horizontal"
                                Visibility="{Binding IsShowingActive, Converter={StaticResource BoolToVisibility}}">
                        <Button Content="{Binding BtnTrack}"
                                Command="{Binding CompleteQuestCommand}"
                                CommandParameter="{Binding SelectedQuest}"
                                Margin="0,4,4,0" Padding="10,2"/>
                        <Button Content="{Binding BtnAbandon}"
                                Command="{Binding AbandonQuestCommand}"
                                CommandParameter="{Binding SelectedQuest}"
                                Margin="0,4,0,0" Padding="10,2"/>
                    </StackPanel>

                    <!-- Available-mode buttons -->
                    <StackPanel Orientation="Horizontal"
                                Visibility="{Binding IsShowingAvailable, Converter={StaticResource BoolToVisibility}}">
                        <Button Content="{Binding BtnAccept}"
                                Command="{Binding AcceptQuestCommand}"
                                CommandParameter="{Binding SelectedQuest}"
                                Margin="0,4,0,0" Padding="10,2"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
