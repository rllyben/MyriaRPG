<Page x:Class="MyriaRPG.View.Pages.Game.IngameWindow.NpcInteraction.Page_GeneralNpcInteraction"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="clr-namespace:MyriaRPG.ViewModel.Pages.Game.IngameWindow.NpcInteraction"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyriaRPG.View.Pages.Game.IngameWindow.NpcInteraction"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page_GeneralNpcInteraction">
    <Page.Resources>

        <!-- Dialog Panel -->
        <DataTemplate DataType="{x:Type vm:DialogPanelViewModel}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Dialog text -->
                <Border Padding="12"
                    CornerRadius="12"
                    Background="{DynamicResource Brush.Surface}"
                    BorderBrush="{DynamicResource Brush.Border}"
                    BorderThickness="1">
                    <TextBlock Text="{Binding DialogText}"
                               Foreground="{DynamicResource Brush.Foreground}"
                           TextWrapping="Wrap"
                           FontSize="14"/>
                </Border>

                <!-- Service buttons -->
                <ItemsControl Grid.Row="1"
                          Margin="0,12,0,0"
                          ItemsSource="{Binding ServiceOptions}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"
                                   HorizontalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Command="{Binding Command}"
                                Padding="12,8"
                                Margin="6"
                                MinWidth="160">
                                <StackPanel>
                                    <TextBlock Text="{Binding Text}" FontWeight="SemiBold"
                               Foreground="{DynamicResource Brush.Foreground}"/>
                                    <TextBlock Text="{Binding Description}"
                               Foreground="{DynamicResource Brush.Foreground}"
                                           Opacity="0.75"
                                           TextWrapping="Wrap"
                                           FontSize="12"/>
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </DataTemplate>


        <!-- Shop Panel -->
        <DataTemplate DataType="{x:Type vm:ShopPanelViewModel}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Shop header row -->
                <DockPanel Grid.Row="0" Margin="0,0,0,10">
                    <TextBlock Text="{Binding Title}"
                           FontSize="16"
                           FontWeight="SemiBold"
                               Foreground="{DynamicResource Brush.Foreground}"
                           DockPanel.Dock="Left"/>

                    <TextBlock Text="{Binding MoneyText}"
                           DockPanel.Dock="Right"
                               Foreground="{DynamicResource Brush.Foreground}"
                           Opacity="0.85"/>
                </DockPanel>

                <!-- Body -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Stock list -->
                    <Border Grid.Column="0"
                        Padding="8"
                        CornerRadius="12"
                        Background="{DynamicResource Brush.Surface}"
                        BorderBrush="{DynamicResource Brush.Border}"
                        BorderThickness="1">

                        <DockPanel>
                            
                            <TextBlock Text="{Binding StockHeader}"
                                   FontWeight="SemiBold"
                               Foreground="{DynamicResource Brush.Foreground}"
                                   Margin="2,0,0,6"
                                   DockPanel.Dock="Top"/>

                            <ListBox ItemsSource="{Binding Stock}"
                                 SelectedItem="{Binding SelectedStock}"
                                 BorderThickness="0"
                                 MaxHeight="200"
                                 Background="{x:Null}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Width="160">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="4*"/>
                                                <ColumnDefinition Width="1*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding Name}" 
                                                       Foreground="{DynamicResource Brush.Foreground}"/>
                                            <TextBlock Text="{Binding BuyPriceText}"
                                                       Foreground="{DynamicResource Brush.Foreground}"
                                                       Opacity="0.8"
                                                       Grid.Column="1"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </DockPanel>
                    </Border>

                    <!-- Details + actions -->
                    <Border Grid.Column="2"
                        Padding="10"
                        CornerRadius="12"
                        Background="{DynamicResource Brush.Surface}"
                        BorderBrush="{DynamicResource Brush.Border}"
                        BorderThickness="1">

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="{Binding SelectedName}"
                                   FontSize="16"
                                   Foreground="{DynamicResource Brush.Foreground}"
                                   FontWeight="SemiBold"/>

                            <TextBlock Grid.Row="1"
                                   Text="{Binding SelectedDescription}"
                                   Margin="0,6,0,0"
                                   Foreground="{DynamicResource Brush.Foreground}"
                                   Opacity="0.8"
                                   TextWrapping="Wrap"/>

                            <!-- Quantity + Buy/Sell -->
                            <StackPanel Grid.Row="3" Margin="0,10,0,0">
                                <DockPanel Margin="0,0,0,8">
                                    <TextBlock Text="{Binding QtyLabel}"
                                               Foreground="{DynamicResource Brush.Foreground}" Opacity="0.8"/>
                                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                                        <Button Content="-" Command="{Binding DecQtyCommand}" Width="28" Margin="0,0,6,0"/>
                                        <TextBlock Text="{Binding Quantity}" VerticalAlignment="Center" MinWidth="28" 
                                                   Foreground="{DynamicResource Brush.Foreground}" TextAlignment="Center"/>
                                        <Button Content="+" Command="{Binding IncQtyCommand}" Width="28" Margin="6,0,0,0"/>
                                    </StackPanel>
                                </DockPanel>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="{Binding BtnBuy}"
                                        Command="{Binding BuyCommand}"
                                        Margin="0,0,8,0"
                                        IsEnabled="{Binding CanBuy}"/>
                                    <Button Content="{Binding BtnSell}"
                                        Command="{Binding SellCommand}"
                                        IsEnabled="{Binding CanSell}"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Back -->
                <Button Grid.Row="2"
                    Content="{Binding BtnBack}"
                    Command="{Binding BackCommand}"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0"/>
            </Grid>
        </DataTemplate>


        <!-- Upgrade Panel -->
        <DataTemplate DataType="{x:Type vm:UpgradePanelViewModel}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="{Binding Title}"
                       FontSize="16"
                       Foreground="{DynamicResource Brush.Foreground}"
                       FontWeight="SemiBold"
                       Margin="0,0,0,10"/>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Equipment list -->
                    <Border Grid.Column="0"
                        Padding="8"
                        CornerRadius="12"
                        Background="{DynamicResource Brush.Surface}"
                        BorderBrush="{DynamicResource Brush.Border}"
                        BorderThickness="1">

                        <ListBox ItemsSource="{Binding Equipment}"
                             SelectedItem="{Binding SelectedEquipment}"
                             BorderThickness="0"
                             Background="{x:Null}"
                             Foreground="{DynamicResource Brush.Foreground}"/>
                    </Border>

                    <!-- Selected details -->
                    <Border Grid.Column="2"
                        Padding="10"
                        CornerRadius="12"
                        Background="{DynamicResource Brush.Surface}"
                        BorderBrush="{DynamicResource Brush.Border}"
                        BorderThickness="1">

                        <StackPanel>
                            <TextBlock Text="{Binding SelectedName}" Foreground="{DynamicResource Brush.Foreground}" FontSize="16" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding SelectedUpgradeText}" Foreground="{DynamicResource Brush.Foreground}" Margin="0,6,0,0" Opacity="0.85"/>
                            <TextBlock Text="{Binding UpgradeCostText}" Foreground="{DynamicResource Brush.Foreground}" Margin="0,6,0,10" Opacity="0.85"/>

                            <Button Content="{Binding BtnUpgrade}"
                                Command="{Binding UpgradeCommand}"
                                IsEnabled="{Binding CanUpgrade}"
                                HorizontalAlignment="Right"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <Button Grid.Row="2"
                    Content="{Binding BtnBack}"
                    Command="{Binding BackCommand}"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0"/>
            </Grid>
        </DataTemplate>


        <!-- Craft Panel -->
        <DataTemplate DataType="{x:Type vm:CraftPanelViewModel}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="{Binding Title}"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource Brush.Foreground}"
                       Margin="0,0,0,10"/>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Recipes -->
                    <Border Grid.Column="0"
                        Padding="8"
                        CornerRadius="12"
                        Background="{DynamicResource Brush.Surface}"
                        BorderBrush="{DynamicResource Brush.Border}"
                        BorderThickness="1">

                        <ListBox ItemsSource="{Binding Recipes}"
                             SelectedItem="{Binding SelectedRecipe}"
                             BorderThickness="0"
                             Foreground="{DynamicResource Brush.Foreground}"
                             Background="{x:Null}"/>
                    </Border>

                    <!-- Recipe details -->
                    <Border Grid.Column="2"
                        Padding="10"
                        CornerRadius="12"
                        Background="{DynamicResource Brush.Surface}"
                        BorderBrush="{DynamicResource Brush.Border}"
                        BorderThickness="1">

                        <StackPanel>
                            <TextBlock Text="{Binding SelectedName}" FontSize="16"
                                       Foreground="{DynamicResource Brush.Foreground}" FontWeight="SemiBold"/>
                            <ItemsControl ItemsSource="{Binding SelectedIngredients}" Margin="0,8,0,10">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <DockPanel Margin="0,2">
                                            <TextBlock Text="{Binding Name}"
                                                       Foreground="{DynamicResource Brush.Foreground}"/>
                                            <TextBlock Text="{Binding AmountText}" DockPanel.Dock="Right"
                                                       Foreground="{DynamicResource Brush.Foreground}" Opacity="0.8"/>
                                        </DockPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <Button Content="{Binding BtnCraft}"
                                Command="{Binding CraftCommand}"
                                IsEnabled="{Binding CanCraft}"
                                HorizontalAlignment="Right"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <Button Grid.Row="2"
                    Content="{Binding BtnBack}"
                    Command="{Binding BackCommand}"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0"/>
            </Grid>
        </DataTemplate>

    </Page.Resources>
    
    <ContentControl Content="{Binding CurrentPanel}"/>
</Page>