<Page x:Class="MyriaRPG.View.Pages.Game.IngameWindow.NpcInteraction.Page_GeneralNpcInteraction"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyriaRPG.View.Pages.Game.IngameWindow.NpcInteraction"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page_GeneralNpcInteraction">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="{Binding NpcName}" FontSize="20" FontWeight="SemiBold" Foreground="{DynamicResource Brush.Foreground}"/>
            <TextBlock Text="{Binding NpcTypeText}" Opacity="0.7" Foreground="{DynamicResource Brush.Foreground}"/>
        </StackPanel>

        <!-- Dialog box -->
        <Border Grid.Row="1"
            Background="{DynamicResource Brush.Surface}"
            BorderBrush="{DynamicResource Brush.Border}"
            BorderThickness="1"
            CornerRadius="{StaticResource Radius.Panel}"
            Padding="12">
            <TextBlock Text="{Binding DialogText}"
                 TextWrapping="Wrap"
                 FontSize="14"
                 Foreground="{DynamicResource Brush.Foreground}"/>
        </Border>

        <!-- Service buttons -->
        <StackPanel Grid.Row="2" Margin="0,10,0,0" Orientation="Horizontal">
            <ItemsControl ItemsSource="{Binding ServiceOptions}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"
                       HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Command="{Binding Command}"
                    Padding="10"
                    Margin="0,0,0,8">
                            <StackPanel>
                                <TextBlock Text="{Binding Text}" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding Description}" Opacity="0.75" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Button Content="{Binding BtnClose}"
              Command="{Binding CloseCommand}"
              HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</Page>