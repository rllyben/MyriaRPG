<Page x:Class="MyriaRPG.View.Pages.Game.IngameWindow.Page_Skills"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyriaRPG.View.Pages.Game.IngameWindow"
      Title="Skills">

    <Grid Margin="12" Background="#101013">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- header -->
            <RowDefinition Height="8"/>
            <RowDefinition Height="*"/>
            <!-- list -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="Skills"
                       FontSize="20" FontWeight="SemiBold"
                       Foreground="#EFEFEF" />
            <TextBlock Text="  •  " Foreground="#7E7E8A" FontSize="14" Margin="4,0"/>
            <TextBlock Text="{Binding HeaderText}"
                       FontSize="14" Foreground="#9A9AB5" />
        </StackPanel>

        <!-- Scrollable skills list -->
        <Border Grid.Row="2" Background="#141723" CornerRadius="8" Padding="8">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Skills}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,4"
                                    Padding="8"
                                    Background="#181B28"
                                    CornerRadius="6">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Name + class tag -->
                                    <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0">
                                        <TextBlock Text="{Binding Name}"
                                                   FontWeight="SemiBold"
                                                   FontSize="16"
                                                   Foreground="#EFEFEF" />
                                        <TextBlock Text="  •  " Foreground="#777"/>
                                        <TextBlock Text="{Binding ClassName}"
                                                   Foreground="#B4B4C5"
                                                   FontSize="12" />
                                    </StackPanel>

                                    <!-- Short description -->
                                    <TextBlock Grid.Row="1" Grid.Column="0"
                                               Text="{Binding ShortDescription}"
                                               Foreground="#C5C5D8"
                                               FontSize="12"
                                               TextTrimming="CharacterEllipsis"
                                               Margin="0,2,0,2"/>

                                    <!-- Tags row -->
                                    <StackPanel Grid.Row="2" Grid.Column="0"
                                                Orientation="Horizontal"
                                                Margin="0,2,0,0">
                                        <!-- Type -->
                                        <Border Background="#2C3145" CornerRadius="4" Padding="4,1" Margin="0,0,4,0">
                                            <TextBlock Text="{Binding TypeText}" Foreground="#DDE" FontSize="11"/>
                                        </Border>
                                        <!-- Target -->
                                        <Border Background="#2C3145" CornerRadius="4" Padding="4,1" Margin="0,0,4,0">
                                            <TextBlock Text="{Binding TargetText}" Foreground="#DDE" FontSize="11"/>
                                        </Border>
                                        <!-- Healing -->
                                        <Border Background="#305735" CornerRadius="4" Padding="4,1" Margin="0,0,4,0"
                                                Visibility="{Binding IsHealing, Converter={StaticResource BoolToVisibility}}">
                                            <TextBlock Text="Healing" Foreground="#D9FDD9" FontSize="11"/>
                                        </Border>
                                        <!-- Level -->
                                        <Border Background="#2C3145" CornerRadius="4" Padding="4,1">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Min Lv. " Foreground="#AAA" FontSize="11"/>
                                                <TextBlock Text="{Binding MinLevel}" Foreground="#EEE" FontSize="11"/>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>

                                    <!-- Mana / timing / details button -->
                                    <StackPanel Grid.Row="0" Grid.RowSpan="3" Grid.Column="1"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                Margin="8,0,0,0">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <TextBlock Text="MP: " Foreground="#999" FontSize="12"/>
                                            <TextBlock Text="{Binding ManaCost}" Foreground="#DDF" FontSize="12"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,2,0,0">
                                            <TextBlock Text="{Binding TimingText}"
                                                       Foreground="#AFAFD0" FontSize="11"/>
                                        </StackPanel>
                                        <Button Content="Details"
                                                Command="{Binding DataContext.OpenDetailsCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}"
                                                Margin="0,4,0,0"
                                                Padding="10,2"
                                                HorizontalAlignment="Right"
                                                FontSize="11"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>