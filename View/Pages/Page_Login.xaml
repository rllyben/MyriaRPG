<Page x:Class="MyriaRPG.View.Pages.Page_Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyriaRPG.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450"
      Title="Page_Login" Width="400">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="3*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Column="1" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <TextBlock x:Name="tbl_Username" HorizontalAlignment="Center" TextWrapping="Wrap" Text="{Binding tblUsername}" VerticalAlignment="Bottom" Margin="0,0,0,5" FontSize="16" FontWeight="Bold" Grid.Row="1"/>
            <TextBlock x:Name="tbl_Password" HorizontalAlignment="Center" Grid.Row="4" TextWrapping="Wrap" Text="{Binding tblPassword}" VerticalAlignment="Bottom" Margin="0,0,0,5" FontSize="16" FontWeight="Bold"/>
            <TextBox x:Name="tbx_Username" HorizontalAlignment="Center" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="14" Text="{Binding Username}" FontWeight="Bold" Margin="0,5,0,0"/>
            <PasswordBox x:Name="pbx_UserPassword" HorizontalAlignment="Center" Grid.Row="5" VerticalAlignment="Top" Width="120" FontSize="14" Margin="0,5,0,0"/>
            <TextBlock x:Name="tbl_UsernameMsg" TextWrapping="Wrap" Text="{Binding tblUserNameMsg}"/>
            <TextBlock x:Name="tbl_PasswordMsg" HorizontalAlignment="Center" Grid.Row="3" TextWrapping="Wrap" Text="{Binding tblPasswordMsg}" VerticalAlignment="Bottom"/>
        </Grid>
        <TextBlock x:Name="tbl_Title" Grid.Column="1" HorizontalAlignment="Center" TextWrapping="Wrap" Text="{Binding Title}" VerticalAlignment="Bottom" FontSize="18" FontWeight="Bold"/>
        <Grid Grid.Column="1" Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="btn_Login" Command="{Binding Login}" Content="{Binding btnLogin}" FontSize="16" FontWeight="Bold"/>
            <Button x:Name="btn_Cancel" Command="{Binding Cancel}" Grid.Column="2" Content="{Binding btnCancel}" FontSize="16" FontWeight="Bold"/>
        </Grid>

    </Grid>
</Page>
