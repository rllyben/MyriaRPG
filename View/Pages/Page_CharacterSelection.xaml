<Page x:Class="MyriaRPG.View.Pages.Page_CharacterSelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyriaRPG.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page_CharacterSelection">
    <Page.Background>
        <ImageBrush ImageSource="/Data/images/fantasy-group-adventurers.jpg"/>
    </Page.Background>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Button x:Name="btn_Join" Command="{Binding Join}" Content="{Binding btnJoin}" Grid.Row="1" Margin="0,5,0,5" FontSize="16" FontWeight="Bold"/>
            <Button x:Name="btn_Create" Command="{Binding Create}" Content="{Binding btnCreate}" Grid.Row="2" Margin="0,5,0,5" FontSize="16" FontWeight="Bold"/>
            <Button x:Name="btn_Delete" Command="{Binding Delete}" Content="{Binding btnDelete}" Grid.Row="3" Margin="0,5,0,5" FontSize="16" FontWeight="Bold"/>
            <Button x:Name="btn_Back" Command="{Binding Back}" Content="{Binding btnBack}" Grid.Row="4" Margin="0,5,0,5" FontSize="16" FontWeight="Bold"/>
        </Grid>
        <Button x:Name="btn_Character1" Command="{Binding SelectFirst}" Content="{Binding btnCharacter1}" HorizontalAlignment="Left" Margin="50,50,0,0" VerticalAlignment="Top" Width="140" Height="40" FontSize="16" FontWeight="Bold" Visibility="{Binding Visibility1}"/>
        <Button x:Name="btn_Character5" Command="{Binding SelectSecond}" Content="{Binding btnCharacter2}" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="1.716,1.954" Width="140" Height="40" FontSize="16" FontWeight="Bold" Visibility="{Binding Visibility2}"/>
        <Button x:Name="btn_Character4" Command="{Binding SelectThird}" Content="{Binding btnCharacter3}" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="140" Height="40" Margin="50,0,0,50" FontSize="16" FontWeight="Bold" Visibility="{Binding Visibility3}"/>
        <Button x:Name="btn_Character2" Command="{Binding SelectFourth}" Content="{Binding btnCharacter4}" HorizontalAlignment="Right" VerticalAlignment="Top" Width="140" Height="40" Margin="0,50,50,0" FontSize="16" FontWeight="Bold" Visibility="{Binding Visibility4}"/>
        <Button x:Name="btn_Character3" Command="{Binding SelectFifth}" Content="{Binding btnCharacter5}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="140" Height="40" Margin="0,0,50,50" FontSize="16" FontWeight="Bold" Visibility="{Binding Visibility5}"/>

    </Grid>
</Page>
